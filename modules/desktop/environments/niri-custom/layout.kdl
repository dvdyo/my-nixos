layout {
    // Set gaps around windows in logical pixels.
    gaps 16

    // When to center a column when changing focus.
    center-focused-column "never"

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    // Fix: Terminals and new windows start at 1/2 width
    default-column-width { proportion 0.5; }

    // Styling (Matches DMS "Clean" look)
    focus-ring {
        width 2
        active-color   "#cba6f7" // Catppuccin Mauve
        inactive-color "#585b70" // Surface 2
        urgent-color   "#f38ba8" // Red
    }

    border {
        off
    }

    shadow {
        on
        softness 30
        spread 5
        offset x=0 y=5
        color "#00000040"
    }
}

// Window Rules for Aesthetics
window-rule {
    geometry-corner-radius 12
    clip-to-geometry true
}

window-rule {
    match is-active=false
    opacity 0.95
}

